<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="tobako_pos_settings" model="ir.ui.view">
            <field name="name">tobako_product.pos_setting</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='company']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='module_pos_restaurant']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//h2[@name='order']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[@groups='product.group_product_variant']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[@id='iface_orderline_customer_notes']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[@id='category_reference']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='limit_categories']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>